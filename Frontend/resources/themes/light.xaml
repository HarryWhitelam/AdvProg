<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundBrush"    Color="White"           />
    <SolidColorBrush x:Key="ControlBrush"       Color="LightGray"       />
    <SolidColorBrush x:Key="ExpanderBrush"      Color="#FFE8E8E8"       />
    <SolidColorBrush x:Key="BorderBrush"        Color="#FFC2D1D1"       />
    <SolidColorBrush x:Key="FontBrush"          Color="Black"           />
    <SolidColorBrush x:Key="ErrorBrush"         Color="Red"             />
    <SolidColorBrush x:Key="CaretBrush"         Color="Black"           />
    <BitmapImage     x:Key="helpImageSource"        UriSource="/resources/help.png"       />
    <BitmapImage     x:Key="settingsImageSource"     UriSource="/resources/settings.png"   />
</ResourceDictionary>